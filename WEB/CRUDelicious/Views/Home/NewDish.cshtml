@model Dish


<div class="text-center col-12 col-md-8">
    <h1 class="display-4">Add a new Dish! </h1>


    <form action="/CreateDish" method="post">
            <div class="col-">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-auto">
                <label for="Chef" class="col">Chef</label>
                <input asp-for="Chef" class="form-control" />
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div class="col-auto">
                <label for="Tastiness" class="col">Tastiness</label>
                <input asp-for="Tastiness" class="form-control"/>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>
            <div class="col-auto">
                <label for="Calories" class="col">Calories</label>
                <input type="number" asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="col-auto">
                <label for="Description" class="col">Description</label>
                <textarea asp-for="Description" class="form-control" /> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-info" />
            </div>
        </form>
</div>