@{
    ViewData["Title"] = "Home Page";
}


@model Product

<div class="text-center">
    <h1 class="display-4">Products  |  <a href="/Categories"> Categories</a>  </h1>
</div>

<div class="row">
    <div class="col-6">
        <h1 class="display-4">New Product</h1>
        <form action="/ProductAdd" method="post">
            <div class="form-group">
                <label for="Name">Name :</label>
                <input asp-for="Name" class="form-control" value="Product "/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description :</label>
                <textarea asp-for="Description" class="form-control" rows="5">Product </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label for="Price">Price :</label>
                <input type="number" step="0.01" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
    <div class="col-6">
        <h1 class="display-4">All Products</h1>
        <partial name="_Products" />
    </div>
</div>