@{
    ViewData["Title"] = "Chefs Page";
}
@model List<Chef>

<div class="text-center">
    <h1 class="display-4">Chef's Dishes</h1>
    Chefs  |  <a href="/dishes"> Dishes </a>  |  <a href="/chefs/new"> Add a Chef </a>   |  <a href="/dishes/new"> Add a Dish </a> 


</div>
<div class="text-center">
    <h1 class="display-4" >Check out our roaster of Chefs </h1>
    <table class="table table-striped">
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Nbr of dishes
            </th>
        </tr>
        @foreach (Chef i in Model)
        {
            <tr>
                <td>
                    @i.FirstName @i.FirstName
                </td>
                <td>
                    @{
                        var age =DateTime.Today.Year -@i.DateBirth.Year;
                    }
                    @age
                </td>
                <td>
                    @i.DishesOwned.Count
                </td>
            </tr>
        }

    </table>

</div>